import javax.imageio.ImageIO;
import javax.swing.*;
import java.awt.*;
import java.awt.image.BufferedImage;

public class FundoBg extends JFrame {  
	
	public FundoBg() {
		getContentPane().add(new imagem());
		setVisible(true);
	}
	
	class imagem extends JPanel {
		public static final int TXT_X = 600;
		public static final int TXT_Y = 378;
		
		public void paintComponent(Graphics g) {
			super.paintComponent(g);
			ImageIcon i = new ImageIcon("firstframe.png");
			Image i3 = i.getImage();
			Image i2 = getScaledImage(i3,TXT_X,TXT_Y);
			g.drawImage(i2,0,0, this);
		}
	}
	
}