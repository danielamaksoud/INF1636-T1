import javax.swing.JOptionPane;

public class press2 implements ActionListener {

	Component c;
	public int n;
	
	private ImageIcon image1;
	private JLabel label1;
	
	public press2(Component x, int n)
	{
		c = x;
	}
	
	public void actionPerformed(ActionEvent e)
	{
		c.setVisible(false);
		((Window) c).dispose();
		
		if (n == 2) {
			tela = new backgroundimage("dado2.jpg");
		}
		if (n == 3) {
			tela = new backgroundimage("dado3.jpg");
		}
		if (n == 4) {
			tela = new backgroundimage("dado4.jpg");
		}
		if (n == 5) {
			tela = new backgroundimage("dado5.jpg");
		}
		if (n == 6) {
			tela = new backgroundimage("dado6.jpg");
		}
		if (n == 7) {
			tela = new backgroundimage("dado7.jpg");
		}
		if (n == 8) {
			showdice l = new showdice("Dado", 8);
		}
		if (n == 9) {
			showdice l = new showdice("Dado", 9);
		}
		if (n == 10) {
			showdice l = new showdice("Dado", 10);
		}
		if (n == 11) {
			showdice l = new showdice("Dado", 11);
		}
		if (n == 12) {
			showdice l = new showdice("Dado", 12);
		}

		Insets ins = l.getInsets();
